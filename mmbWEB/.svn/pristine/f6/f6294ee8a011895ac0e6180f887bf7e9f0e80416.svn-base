@import "com.less";
// 公共部分占个位
@media screen and (width:640px) {
    html,
    body {
        /* 100 */
        font-size: 100px;
    }
}

//头部公共部分
header{
    .search {
        margin-top:.5rem;
            height: .5rem; 
            width: 100%;
            padding: 0.1rem;
            position: relative;
            border-bottom: 1px solid #e6e6e6;
            background-color: #ffffff;
            input {
                float: left;
                font-size: .16rem;
                border-radius: .15rem;
            }
            .search-txt {
                background-color: #f1f1f1;
                padding-left: .2rem;
            }
            .search-btn {
                position: absolute;
                top: .1rem;
                right: .1rem;
                width: .6rem;
                height: .3rem;
                background-color: #ff841d;
                color: #fff;
                line-height: .3rem;
            }
        }
    }

// 我的部分
section{
    margin:1rem 0 .9rem; 
    
        nav{
            height: .4rem;
            width: 100%;
            line-height:.4rem;
            background-color: #f5f5f5;
            border-bottom: 1px solid #e6e6e6;
            font-size: .16rem;
            padding-left:.2rem; 
            position: relative;
            a{
                display: inline-block;
            }
            input{
                display: inline-block;
                position: absolute;
                right: 0.1rem;
                top:0.04rem;
                height: .3rem;
                width: .6rem;
                border-radius: .1rem;
                font-size: .16rem;
                background-color:#dedede;
            }
        }
        .main{
            li {
                height: 1.6rem;
                width: 100%;
                border-bottom: 1px solid #e7e7e7;
            a {
                .pic {
                    float: left;
                    margin: 0 .1rem;
                    width: 1.4rem;
                    height: 1.4rem;
                    img{
                    height: 100%;
                    width: 100%;
                    }
                }
                .info {
                    padding: .1rem;
                    word-break: break-all;
                    .tit {
                        font-size: .14rem;
                        color: #333333;
                    }
                    .price {
                        font-size: .18rem;
                        // font-weight: ;
                        color: #ea3900;
                        margin-top:.1rem;
                    }
                    .others {
                        font-size: .12rem;
                        color: #999999;
                        margin-top:.1rem;
                        .commons{
                            float: right;
                        }
                    }
                }
            }
        }
    
        }
}