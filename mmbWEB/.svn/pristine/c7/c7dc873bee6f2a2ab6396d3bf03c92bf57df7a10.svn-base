@import "base.less";
//创建颜色函数
@baseColor: #E4393C;
//640px屏幕
body{
    font-size: 0.16rem;
}
.lowestPrice_container {
    .lowestPrice_header {
        background-color: @baseColor;
        width: 100%;
        height: 45px;
        position: fixed;
        top: 0;
        padding: 0 45px;
        z-index: 999;
        .LP_back {
            width: 45px;
            height: 45px;
            position: absolute;
            top: 0;
            left: 0;
            text-align: center;
            line-height: 45px;
            a {
                font-size: 30px;
                color: #fff;
            }
        }
        .LP_title {
            width: 100%;
            height: 45px;
            .title_content {
                text-align: center;
                font-size: 20px;
                color: #fff; // line-height: 45px;
                p {
                    margin: 0;
                    line-height: 45px;
                    font-weight: 700;
                }
            }
        }
        .LP_updata {
            width: 45px;
            height: 45px;
            background: url("../images/header_app.png") no-repeat center;
            background-size: 35px 35px;
            position: absolute;
            top: 0;
            right: 0;
        }
    } //导航栏
    .LP_navBar {
        background-color: #fff;
        margin-top: 45px;
        position: relative;
        overflow: hidden;
        .LP_nav {
            height: 35px;
            padding-right: 35px;
            // position: relative;
            overflow: hidden;
            ul {
                width: 750px;
                position: absolute;
                left: 0;
                li {
                    float: left;
                    text-align: center; // width: 50px;
                    height: 34px;
                    line-height: 35px;
                    padding: 0 10px;
                    font-size: 14px;
                    a {
                        height: 34px;
                    }
                }
                // li:nth-child(1) a {
                //     border-bottom: 1px solid #E4393C;
                //     color: red;
                // }
            }
            .LP_nav_search {
                width: 35px;
                height: 35px;
                background-color: #f7f7f7;
                border-left: 1px solid #f7f7f7;
                position: absolute;
                right: 0;
                top: 0;
                a {
                    display: block;
                    width: 100%;
                    text-align: center;
                    line-height: 35px;
                    font-size: 30px;
                }
            }
            .LP_nav_search2 {
                width: 35px;
                height: 35px;
                background-color: #f7f7f7;
                border-left: 1px solid #f7f7f7;
                position: absolute;
                right: 0;
                top: 0;
                a {
                    display: block;
                    width: 100%;
                    text-align: center;
                    line-height: 35px;
                    font-size: 20px;
                    font-weight: 400;
                    color: gray;
                   
                }
            }


            .LP_searchBar{
                width: 100%;
                padding: 20px 60px 20px 20px ;
                background-color: #f7f7f7;
                position: absolute;
                top: 35px;
                left: 0;
                z-index: 20;
                display: none;
                span{}
                input{
                    width: 100%;
                    height: 30px;
                }
                button{
                    position: absolute;
                    top: 50%;
                    right: 10px;
                    transform: translateY(-50%);
                    border: none;
                    background-color: #f7f7f7;
                    font-size: 16px;
                }
            }
        }
        .LP_img {
            padding: 15px 0;
            background-color: #f7f7f7;
        }
    }
    .rocket {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: gray; // margin: auto;
        text-align: center;
        line-height: 40px;
        position: fixed;
        bottom: 0.5rem;
        right: 0.5rem;
        z-index: 100;
        display: none;
        i {
            font-size: 24px;
        }
    }
    .LP_goodsList {
        background-color: #f7f7f7;
        .goods {
            // height: 1.5rem;
            min-height: 150px;
            background-color: #fff;
            margin-bottom: 15px;
            padding: 10px 5px;
            padding-left: 1.4rem;
            position: relative;
            overflow: hidden;
            .goods_img {
                // max-width: 130px;
                width: 1.3rem;
                position: absolute;
                top: .1rem;
                left:.05rem;
                margin-right: .2rem;
                img {
                    // max-height: 130px;
                    height: 1.3rem;
                }
            }
            .goods_info {
                width: 100%;
                padding: 0 .2rem;
                .info_title {
                    min-height: 28px;
                    max-height: 40px;
                }
                .info_price {
                    font-size: 0.2rem;
                    color: #fc4e52;
                    margin-bottom: 10px;
                    em {
                        font-size: 0.2rem;
                        color: #fc4e52;
                        padding: 0 .1rem;
                    }
                    del {
                        color: gray;
                        font-size: 0.16rem;
                        margin-left: 10px;
                        
                    }
                }
                .info_progress {
                    min-height: 26px;
                    height: .26rem;
                    .bar {
                        float: left;
                        a {}
                        i {
                            span {
                                display: inline-block;
                                width: 1rem;
                                height: .15rem;
                                line-height: .15rem;
                                min-height: 12px;
                                border-radius: 10px;
                                background-color: #ffb7b7;
                                border: 1px solid red;
                                text-align: center;
                            }
                        }
                        b {
                            color: #fc4e52;
                            margin-left: 10px;
                        }
                    }
                }
                .info_links {
                    width: 100%;
                    height: .3rem; // position: absolute;
                    max-height: 31px;
                    // bottom: 10px;
                    a:nth-child(1) {
                        width: 1.5rem;
                        text-align: center;
                        float: left;
                        border: 1px dotted #fc4e52;
                        color: #fc4e52;
                        padding:.05rem;
                        font-size: .16rem;
                    }
                    a:nth-child(2) {
                        width: .8rem;
                        float: right;
                        background-color: @baseColor;
                        padding: 5px;
                        color: #fff;
                        border-radius: 5px;
                        font-size: .16rem;
                        text-align: center;
                    }
                }
            }
        }
    }
    .LP_bottom{
        width: 100%;
        position: fixed;
        bottom: 0;
        font-size: 14px;
        color: #5a5a5a;
        left: 0;
        padding: 20px 0;
        background-color: #f7f7f7;
        max-height: 150px;
        ul{
            li{
                float: left;
                width: 33.3%;
                height: 30px;
                line-height: 30px;
                box-sizing: border-box;
                border: 1px solid #efefef;
                text-align: center;
            }
        }
        .bottom_info{
            p:nth-child(1){
                padding: .2rem;
                margin: 0;
                text-align: center;
                span:nth-child(1){
                    color: red;
                    padding: 0 .1rem;
                }
                span:nth-child(2){
                    font-weight: 700;
                }
                span:nth-child(3){
                    color: #747474;
                }
            }
            p:nth-child(2){
                margin: 0;
                text-align: center;
                color: #bfbfbf;
            }
        }
    }
}

//点击导航栏的li标签时的类名
.active {
    border-bottom: 1px solid #E4393C;
    color: red;
}