@import "com.less";

/*主题部分*/

.main {
    margin-top: .5rem;  
    .search {
        height: .5rem;
        padding: 0.1rem;
        position: relative;
        border-bottom: 1px solid #e6e6e6;
        input {
            float: left;
            font-size: .16rem;
            border-radius: .15rem;
        }
        .search-txt { 
            background-color: #f1f1f1;
            padding-left: .2rem;
        }
        .search-btn {
            position: absolute;
            top: .1rem;
            right: .1rem;
            width: .6rem;
            height: .3rem;
            background-color: #ff841d;
            color: #fff;
            line-height: .3rem;
        }
    }
    nav {
        font-size: .14rem;
        ul {
            li {
                float: left;
                width: 25%;
                height: .7rem;
                margin: .16rem 0;
                text-align: center;
                a {
                    height: 100%;
                    img {
                        width: .5rem;
                        margin: 0 auto;
                    }
                }
            }
			li:nth-last-child(-n+4){
				display: none;
			}
        }
    }
    .container {
        .title {
            height: .4rem;
            background-color: #ffa126;
            font-size: .18rem;
            font-weight: bold;
            line-height: .4rem;
            padding-left: .1rem;
            color: #fff;
            position: relative;
            img {
                position: absolute;
                right: .1rem;
                top: .1rem;
                width: .2rem;
            }
        }
        aside {
            ul {
                li {
                    padding: .14rem .08rem;
                    a {
                        padding-left: 1rem;
                        position: relative;
						height: 1rem;
                        .pic {
							position: absolute;
							top: 0;
							left: 0;
                            width: 1rem;
                            height: 1rem;
                        }
						.info{
							height: 1rem;
							font-size: .14rem;
							.info-title{
								padding-top: .05rem;
								height: .6rem;
								color:#333333;
								span{
									color:#ff6c00;
								}
							}
							.info-other{
								color:#a9a1a9;
								font-size: 12px;
								.shop{
									float: left;
								}
								.message{
									float: right;
									padding-right: .05rem;
									i{
									vertical-align: middle;										
									}
								}
							}
						}
                    }
                }
            }
        }
    }
}