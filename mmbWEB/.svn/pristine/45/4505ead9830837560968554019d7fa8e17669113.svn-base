/*导入样式文件*/
* {
  margin: 0;
  padding: 0;
  /* 盒子模型的 怪异模式  */
  box-sizing: border-box;
}
a {
  text-decoration: none;
  color: inherit;
  display: block;
  /* 移动端 a标签 点击高亮 */
  -webkit-tap-highlight-color: transparent;
}
ul {
  list-style: none;
}
img {
  width: 100%;
  /* 解决图片默认的3像素  */
  display: block;
}
input {
  display: block;
  width: 100%;
  height: 100%;
  border: none;
}
/* 清楚浮动 */
.clearfix::after {
  display: block;
  content: "";
  height: 0;
  clear: both;
}
/*字体图标*/
@font-face {
  font-family: 'iconfont';
  src: url('../font/iconfont.eot');
  src: url('../font/iconfont.eot?#iefix') format('embedded-opentype'), url('../font/iconfont.woff') format('woff'), url('../font/iconfont.ttf') format('truetype'), url('../font/iconfont.svg#iconfont') format('svg');
}
.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}
.header-A {
  top: 0rem;
  width: 100%;
  height: 0.5rem;
  background-color: #ff841d;
}
.header-A .top-logo {
  float: left;
  width: 1.85rem;
  height: 100%;
  margin-left: 0.2rem;
  background: url("../images/header_logo.png") no-repeat;
  background-size: 1.85rem 0.25rem;
  padding: 0.125rem 0;
  box-sizing: border-box;
  background-origin: content-box;
  background-clip: content-box;
}
.header-A .top-download {
  float: right;
  width: 0.68rem;
  height: 100%;
  box-sizing: border-box;
  background: url("../images/header_app.png") no-repeat;
  background-size: 0.34rem 0.34rem;
  padding: 0.08rem 0.08rem;
  background-origin: content-box;
  background-clip: content-box;
}
.main {
  /*  轮播 */
}
.main .search {
  height: .5rem;
  padding: 0.1rem;
  position: relative;
  border-bottom: 1px solid #e6e6e6;
}
.main .search input {
  float: left;
  font-size: .16rem;
  border-radius: .15rem;
}
.main .search .search-txt {
  background-color: #f1f1f1;
  padding-left: .2rem;
}
.main .search .search-btn {
  position: absolute;
  top: .1rem;
  right: .1rem;
  width: .6rem;
  height: .3rem;
  background-color: #ff841d;
  color: #fff;
  line-height: .3rem;
}
.main nav {
  font-size: .14rem;
}
.main nav ul li {
  float: left;
  width: 25%;
  height: .7rem;
  margin: .16rem 0;
  text-align: center;
}
.main nav ul li a {
  height: 100%;
}
.main nav ul li a img {
  width: .5rem;
  margin: 0 auto;
}
.main nav ul li:nth-last-child(-n+4) {
  display: none;
}
.main .carousel {
  margin-bottom: .3rem;
  overflow: hidden;
  position: relative;
}
.main .carousel .carousel_ul {
  width: 1000%;
  overflow: hidden;
  /* 禁用浏览器默认 触摸行为 */
  touch-action: none;
}
.main .carousel .carousel_ul li {
  overflow: hidden;
  float: left;
  width: 10%;
}
.main .carousel .carousel_ul li img {
  width: 100%;
  height: 100%;
}
.main .carousel .carousel_indexer {
  position: absolute;
  bottom: 5px;
  /* left 相对于定位了的父元素 */
  left: 50%;
  /* 相对于自身的宽度 */
  transform: translateX(-50%);
}
.main .carousel .carousel_indexer li {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  border: 1px solid #fff;
  float: left;
  margin-left: 5px;
}
.main .carousel .carousel_indexer .active {
  background-color: #fff;
}
/*超值折扣推荐*/
.index_discount {
  width: 100%;
  height: 100%;
}
.index_discount .index_discount_title a {
  display: block;
  height: .4rem;
  background-color: #ff9b19;
  padding: 0 .1rem;
}
.index_discount .index_discount_title a span {
  font-size: .18rem;
  font-weight: bold;
  float: left;
  color: #fff;
  line-height: .4rem;
}
.index_discount .index_discount_title a img {
  width: .2rem;
  height: .2rem;
  float: right;
  margin-top: .1rem;
}
.index_discount .index_discount_content {
  background-color: #fff;
}
.index_discount .index_discount_content ul li {
  height: 1.28rem;
  padding: .14rem .08rem;
  position: relative;
}
.index_discount .index_discount_content ul li a .pic {
  width: 1.1rem;
  float: left;
}
.index_discount .index_discount_content ul li a .pic img {
  height: 1rem;
  width: 1rem;
}
.index_discount .index_discount_content ul li a .info {
  font-size: .14rem;
  line-height: .24rem;
  padding-left: 1rem;
}
.index_discount .index_discount_content ul li a .info .title {
  font-size: .15rem;
  color: #333;
  height: .57rem;
}
.index_discount .index_discount_content ul li a .info .title span {
  color: #ff6c00;
}
.index_discount .index_discount_content ul li a .info .other {
  margin-top: .08rem;
  color: #a1a1a1;
  font-size: .12rem;
}
.index_discount .index_discount_content ul li a .info .other .source {
  float: left;
}
.index_discount .index_discount_content ul li a .info .other .iconfont {
  float: right;
  font-size: .12rem;
  color: #a1a1a1;
}
.index_discount .index_more {
  text-align: center;
}
.index_discount .index_more a {
  height: .3rem;
  line-height: .3rem;
  background-color: #fff;
  color: #666;
  font-size: .13rem;
  margin: .1rem;
  border: 1px solid #ddd;
  border-radius: .04rem;
}
.index_discount .index_rank {
  margin-top: .2rem;
}
/*底部*/
.index_foot {
  width: 100%;
  background-color: #efefef;
  border-top: 1px solid #ccc;
  color: #5a5a5a;
  margin-top: .1rem;
}
.index_foot .index_foot_top {
  height: 34px;
  width: 100%;
  border-bottom: 1px solid #ccc;
}
.index_foot .index_foot_top a {
  display: block;
  font-size: 0.14rem;
  float: left;
  width: 33.3%;
  height: 34px;
  text-align: center;
  line-height: 34px;
  box-sizing: border-box;
  border-right: 1px solid #ccc;
}
.index_foot .index_foot_top a span {
  color: #747474;
  font-size: 0.14rem;
  -webkit-text-stroke-width: 0px;
}
.index_foot .index_foot_top a:not(:last-child) {
  border-right: 1px solid #c4c4c4;
}
.index_foot .index_foot_bottom {
  padding: .15rem;
  color: #5a5a5a;
  text-align: center;
  font-size: .12rem;
}
.index_foot .index_foot_bottom p {
  margin: 0rem;
}
.index_foot .index_foot_bottom p a {
  display: inline-block;
}
.index_foot .index_foot_bottom p a:first-child {
  color: red;
}
/*点击下载*/
.index_backapp {
  position: fixed;
  right: 0rem;
  bottom: .6rem;
  z-index: 999;
}
.index_backapp .index_app img {
  height: .67rem;
  width: .6rem;
  position: relative;
}
.index_backapp #x {
  border: 1px solid #d9d9d9;
  width: .1rem;
  height: .1rem;
  font-size: .12rem;
  color: #000;
  line-height: .1rem;
  position: absolute;
  cursor: pointer;
  top: 0;
  left: .45rem;
}
.index_gotop {
  position: fixed;
  right: .08rem;
  bottom: .1rem;
  z-index: 999;
  display: none;
}
.index_gotop .index1-top {
  width: .44rem;
  height: .44rem;
  border-radius: 50%;
}
