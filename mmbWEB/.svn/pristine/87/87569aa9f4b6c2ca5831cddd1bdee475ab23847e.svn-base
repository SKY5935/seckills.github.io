/*导入样式文件*/
@import "base.less";



// 头部
.header-A {
    // position: fixed;
    // z-index: 1;
    top: 0rem;
    width: 100%;
    height: 0.5rem;
    background-color: #ff841d;
    
    .top-logo {
        float: left;
        width: 1.85rem;
        height: 100%;
        margin-left: 0.2rem;
        background: url("../images/header_logo.png") no-repeat;
        background-size: 1.85rem 0.25rem;
        padding: 0.125rem 0;
        box-sizing: border-box;
        background-origin: content-box;
        background-clip: content-box;
    }
    .top-download {
        float: right;
        width: 0.68rem;
        height: 100%;
        box-sizing: border-box;
        background: url("../images/header_app.png") no-repeat;
        background-size: 0.34rem 0.34rem;
        padding: 0.08rem 0.08rem;
        background-origin: content-box;
        background-clip: content-box;
    }
}
// 主题
.main {
    // margin-top: .5rem;
    // 搜索框
    .search {
        height: .5rem;
        padding: 0.1rem;
        position: relative;
        border-bottom: 1px solid #e6e6e6;
        input {
            float: left;
            font-size: .16rem;
            border-radius: .15rem;
        }
        .search-txt {
            background-color: #f1f1f1;
            padding-left: .2rem;
        }
        .search-btn {
            position: absolute;
            top: .1rem;
            right: .1rem;
            width: .6rem;
            height: .3rem;
            background-color: #ff841d;
            color: #fff;
            line-height: .3rem;
        }
    }
    // 菜单栏
    nav {
        font-size: .14rem;
        ul {
            li {
                float: left;
                width: 25%;
                height: .7rem;
                margin: .16rem 0;
                text-align: center;
                a {
                    height: 100%;
                    img {
                        width: .5rem;
                        margin: 0 auto;
                    }
                }
            }
			li:nth-last-child(-n+4){
				display: none;
			}
        }
    }
    /*  轮播 */
   .carousel {
    margin-bottom: .3rem;  
     overflow: hidden;
    position: relative;
    .carousel_ul {
        width: 1000%;
        overflow: hidden;
        /* 禁用浏览器默认 触摸行为 */
        touch-action: none;
        li {
            overflow: hidden;
            float: left;
            width: 10%;
            img{
                width: 100%;
                height: 100%;
            }
        }
    }
    .carousel_indexer {
        position: absolute;
        bottom: 5px;
        /* left 相对于定位了的父元素 */
        left: 50%;
        /* 相对于自身的宽度 */
        transform: translateX(-50%);
        li {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            border: 1px solid #fff;
            float: left;
            margin-left: 5px;
        }
        .active {
            background-color: #fff;
        }
    }
   } 

}
/*超值折扣推荐*/

.index_discount {
    width: 100%;
    height: 100%;
    .index_discount_title {
        a {
            display: block;
            height: .4rem;
            background-color: #ff9b19;
            padding: 0 .1rem;
            span {
                font-size: .18rem;
                font-weight: bold;
                float: left;
                color: #fff;
                line-height: .4rem;
            }
            img {
                width: .2rem;
                height: .2rem;
                float: right;
                margin-top: .1rem;
            }
        }
    }
    .index_discount_content {
        background-color: #fff;
        ul {
            li {
                height: 1.28rem;
                padding: .14rem .08rem;
                position: relative;
                a {
                    .pic {
                        width: 1.1rem;
                        float: left;
                        img {
                            height: 1rem;
                            width: 1rem;
                        }
                    }
                    .info {
                        font-size: .14rem;
                        line-height: .24rem;
                        padding-left: 1rem;
                        .title {
                            font-size: .15rem;
                            color: #333;
                            height: .57rem;
                            // line-height: .19rem;
                            span {
                                color: #ff6c00;
                            }
                        }
                        .other {
                            margin-top: .08rem;
                            color: #a1a1a1;
                            font-size: .12rem;
                            .source {
                                float: left;
                            }
                            .iconfont{
                                float: right;
                                font-size: .12rem;
                                color: #a1a1a1;
                            }
                        }
                    }
                }
            }
        }
    }
    .index_more {
        text-align: center;
        a {
            height: .3rem;
            line-height: .3rem;
            background-color: #fff;
            color: #666;
            font-size: .13rem;
            margin: .1rem;
            border: 1px solid #ddd;
            border-radius: .04rem;
        }
    }
    .index_rank {
        margin-top: .2rem;
        // margin-bottom: 1.3rem;
    }
}


/*底部*/

.index_foot {
    width: 100%; 
    // height: 96px;
    // position: fixed;
    // bottom: 0rem;
    // z-index: 1;
    background-color: #efefef;
    border-top: 1px solid #ccc;
    color:#5a5a5a;
    margin-top: .1rem;
    .index_foot_top {
         height: 34px;
         width: 100%;
		border-bottom: 1px solid #ccc;
        a {
            display: block;
             font-size: 0.14rem;
            float: left;
            width: 33.3%;
            height: 34px;
            text-align: center;
            line-height: 34px;
            box-sizing: border-box;
            border-right: 1px solid #ccc;
           span{
              color:#747474; 
              font-size: 0.14rem;
              -webkit-text-stroke-width: 0px;
           } 
        }
        a:not(:last-child) {
            border-right: 1px solid #c4c4c4;        
        }
    }
    .index_foot_bottom {
        padding: .15rem;
        color: #5a5a5a;
        text-align: center;
        font-size: .12rem;
        p {
            margin: 0rem;
            a {
                display: inline-block;
            }
            a:first-child {
                color: red;
            }
        }
    }
}


/*点击下载*/

.index_backapp {
    position: fixed;
    right: 0rem;
    bottom: .6rem;
    z-index: 999;
    .index_app {
        img {
            height: .67rem;
            width: .6rem;
            position: relative;
        }
    }
    .index_gotop {
    position: fixed;
    right: .08rem;
    bottom: .1rem;
    z-index: 999;
    display: none;
    img {
        
        width: .44rem;
        height: .44rem;
        border-radius: 50%;
        // overflow: hidden;
    }
}

    #x{
        border: 1px solid #d9d9d9;
        width: .1rem;
        height: .1rem;
        font-size: .12rem;
        color: #d6d6d6;
        line-height: .1rem;
        position: absolute;
        cursor: pointer;
        top:0;
        left:.45rem;

    }
}


