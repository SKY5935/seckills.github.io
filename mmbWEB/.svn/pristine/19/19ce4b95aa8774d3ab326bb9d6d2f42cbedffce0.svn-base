.container {
  margin: 0 auto;
  background-color: #f2f2f2;
}
.container .cu-content {
  padding: 0.04rem 0.1rem;
  background-color: #fff;
}
.container .cu-content h3 {
  margin: 0.1rem auto 0.05rem auto;
  font-size: 0.18rem;
  font-weight: 800;
  text-align: left;
  color: #5a5a5a;
}
.container .cu-content h4 {
  color: #ff6c00;
  display: block;
  font-size: 0.15rem;
}
.container .cu-content .info {
  margin: 0.12rem auto;
  color: #999;
  font-size: 0.12rem;
  line-height: 0.24rem;
}
.container .cu-content .info span {
  color: #999;
}
.container .cu-content .info .mall {
  margin: 0px 0.04rem;
}
.container .cu-content .info .addtime {
  margin-right: 0.04rem;
}
.container .cu-content .info .author {
  margin-right: 0.04rem;
}
.container .cu-content .content .picwrap {
  width: 100%;
  overflow: hidden;
  margin: 0.12rem auto auto 0.1rem;
}
.container .cu-content .content .picwrap > img {
  float: right;
  width: 1.2rem;
  height: 1.2rem;
  margin-right: 0.3rem;
}
.container .cu-content .content .conn {
  font-size: 0.16rem;
  line-height: 0.24rem;
  color: #606060;
  padding-bottom: -0.2rem;
  width: 98%;
}
.container .cu-content .content .conn img {
  margin: 0 auto;
  width: 4.3rem;
  height: 4.3rem;
}
.container .cu-content .golink a {
  height: 0.4rem;
  line-height: 0.4rem;
  display: block;
  margin: 0.2rem 0.1rem;
  background: #ff9000;
  border-radius: 0.04rem;
  text-align: center;
  font-size: 0.14rem;
  color: #fff;
}
.container .cu-content-pl {
  background-color: #fff;
}
.container .cu-content-pl .tit {
  font-size: 0.16rem;
  padding: 0.06rem 0.08rem;
}
.container .cu-content-pl .reply {
  padding: 0.06rem 0.08rem;
}
.container .cu-content-pl .reply .form {
  border: 2px solid #eceae8;
  border-radius: 0.02rem;
  padding: 0.03rem 0 0 0.03rem;
  background-color: #fff;
  position: relative;
  width: 98%;
  margin: 0 auto;
  height: 1.5rem;
}
.container .cu-content-pl .reply .form textarea {
  line-height: 0.22rem;
  color: #666;
  height: 0.68rem;
  width: 98%;
  border: 0;
}
.container .cu-content-pl .reply .form .ctrl {
  background-color: #fbfbfb;
  height: 0.36rem;
  margin-left: -0.04rem;
  border-top: 1px solid #f2f2f2;
  position: absolute;
  width: 100%;
  bottom: 0;
}
.container .cu-content-pl .reply .form .ctrl input {
  position: absolute;
  right: -0.02rem;
  bottom: -0.02rem;
  background-color: #ff841d;
  border: 1px solid #ff841d;
  width: 1rem;
  height: 0.39rem;
  color: #fff;
  border-radius: 0 0 0.02rem 0;
  font-size: 0.16rem;
}
.container .cu-content-pl .list ul li {
  padding: 0.2rem 0.2rem;
  font-size: 0.12rem;
}
.container .cu-content-pl .list ul li .userimg img {
  width: 0.5rem;
  float: left;
}
.container .cu-content-pl .list ul li .con .username {
  color: #ff6c00;
  margin-left: 0.6rem;
  font-size: 0.16rem;
}
.container .cu-content-pl .list ul li .content {
  margin-top: 0.01rem;
  border-bottom: 1px solid #ccc;
  font-size: 0.14rem;
  padding-left: 0.5rem;
}
.container .cu-content-pl .list ul li .content img {
  width: 0.1rem;
  display: inline-block;
}
.ct100_Menu {
  background-color: #ebebeb;
}
.ct100_Menu .appbanner {
  position: relative;
  font-size: 0.12rem;
  margin-top: 0.2rem;
  background-color: #434343;
  padding: 0.1rem;
  width: 98%;
}
.ct100_Menu .appbanner .applogo {
  float: left;
}
.ct100_Menu .appbanner .applogo img {
  width: 0.64rem;
}
.ct100_Menu .appbanner .tit {
  font-size: 0.14rem;
  padding-left: 0.1rem;
  overflow: hidden;
  margin-left: 0.1rem;
  color: #fff;
}
.ct100_Menu .appbanner .tit p {
  padding: 0;
  margin: 0;
  color: #fee6c2;
}
.ct100_Menu .appbanner .btn {
  position: absolute;
  width: 0.8rem;
  height: 0.3rem;
  right: 0.3rem;
  top: 0.08rem;
}
.ct100_Menu .appbanner .btn a {
  height: 0.28rem;
  line-height: 0.28rem;
  display: block;
  width: 1rem;
  color: #fff;
  background-color: #6db110;
  text-align: center;
  border-radius: 0.04rem;
}
#ctl00_footerApp .foot_top {
  margin-top: 0;
}
