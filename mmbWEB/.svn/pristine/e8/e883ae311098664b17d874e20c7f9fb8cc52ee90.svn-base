/*产品十大品牌*/

.brand_best_view {
    background-color: #f2f2f2;
}


/*导航栏*/

.nav {
    height: .36rem;
    font-size: .14rem;
    line-height: .36rem;
    background-color: #ebebeb;
    background: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#ebebeb));
    color: #5a5a5a;
    border-top: solid 1px #ebebeb;
    border-bottom: 1px solid #ccc;
    padding-left: .1rem;
    a {
        display: inline;
    }
}


/*产品十大品牌列表*/

.model {
    // padding-left: 10px;
    // padding-right: 10px;
    .bd_title {
        height: .36rem;
        font-size: .14rem;
        color: #874604;
        line-height: .36rem;
        border-color: #eee;
        padding-left: .1rem;
        border-bottom: 1px solid #ccc;
        border-top: 1px solid #ccc;
    }
    /*产品前十排行板*/
    .best_list {
        // padding-left: 10px;
        // padding-right: 10px;
        li {
            border-bottom: 1px solid #e7e7e7;
            padding: .1rem;
            a {
                height: .4rem;
                span {
                    display: inline-block;
                    width: .2rem;
                    height: .2rem;
                    font-size: .14rem;
                    line-height: .2rem;
                    vertical-align: top;
                    text-align: center;
                    color: #fff;
                    background-color: #c9c9c9;
                    margin-right: .1rem;
                }
                span.top1 {
                    background-color: #f10e0e;
                }
                span.top2 {
                    background-color: #ff9314;
                }
                span.top3 {
                    background-color: #8adf5b;
                }
                .product {
                    display: inline-block;
                    vertical-align: top;
                    .tit {
                        color: #000;
                        font-size: .14rem;
                    }
                    p {
                        font-size: .12rem;
                        color: #999;
                        margin-top: 3px;
                    }
                }
            }
        }
    }
    /*产品销量排行列表*/
    .ProList {
        li {
            padding: .1rem;
            border-bottom: 1px solid #e7e7e7;
            a {
                .pic {
                    float: left;
                    margin-right: .1rem;
                    width: 1rem;
                }
                .info {
                    line-height: .22rem;
                    // min-height: 44px;
                    height: .44rem;
                    word-break: break-all;
                    .tit {
                        font-size: .14rem;
                        color: #333333;
                    }
                    .price {
                        font-size: .18rem;
                        color: #ea3900;
                        line-height: .3rem;
                        .star {
                            float: right;
                        }
                    }
                    .others {
                        font-size: .12rem;
                        color: #999999;
                    }
                }
            }
        }
    }
    /*最有用的用戶评论*/
    .usefulComment,.newestComment {
        li {
            padding: .1rem;
            border-bottom: 1px solid #e7e7e7;
            a {
                .proInfo {
                    .pic {
                        width: .8rem;
                        float: left;
                        margin-right: .1rem;
                    }
                    p {
                        font-size: .14rem;
                        color: #999;
                    }
                }
            }
            
            .proComt::before {
                    content: '';
                    display: block;
                    border-top: 0;
                    border-left: .08rem solid #f2f2f2;
                    border-right: .08rem solid #f2f2f2;
                    border-bottom: .08rem solid #fff;
                    position: absolute;
                    top: -.06rem;
                    left: .3rem;
                }
            .proComt {
                margin-top: .1rem;
                position: relative;
                a {
                    background-color: #fff;
                    font-size: .14rem;
                    color: #000;
                    padding: .1rem;
                    .comtTime {
                        margin-bottom: .1rem;
                        .user {
                            color: #4f6900;
                        }
                        .star {
                            color: orange;
                            font-size: .2rem;
                        }
                        em {
                            float: right;
                            color: #999;
                        }
                    }
                    p {
                        line-height: .22rem;
                        word-break: break-all;
                        letter-spacing: 1px;
                    }
                }
            }
        }
    }
}