@import "base.less";
.icon() {
    background: url(../images/icon_bar.png);
    background-size: 2.20rem 1.32rem;
}

header {
    width: 100%;
    height: 0.44rem;
    background-color: #ff841d;
    // position: relative;
    position: fixed;
    z-index: 1;
    top: 0;
    a {
        display: block;
        position: relative;
        .iconfont {
            left: 0.10rem;
            top: .12rem; // font-size: 0.16rem;
            width: 0.1rem;
            height: .16rem; // .icon();
            // background-position:-.90rem 0;
            position: absolute;
            color: white;
            font-weight: bold;
            font-size: 0.17rem;
        }
    }
    .discount {
        width: 100%;
        height: 0.44rem;
        font-size: 0.20rem;
        text-align: center;
        line-height: 0.4rem;
        color: white;
        font-weight: bold;
    }
    .AppLoad {
        top: 0.05rem;
        right: 0.20rem;
        background: url(../images/header_app.png)center/.30rem no-repeat;
        width: .34rem;
        height: .34rem;
        position: absolute;
    }
}

// 中间图片内容部分
.taoUl{
    margin-top:0.44rem ;
}
.content-Img {
    padding: .14rem .08rem; // background-color: pink;
    height: 1.28rem;
    width:100%;
    a {
        // width: 3.04rem;
        height: 1.0rem;
        position: relative;
        .pic {
            // float: left;
            left:0;
            position: absolute;
            img {
                width: 1.0rem;
                height: 1.0rem;
            }
        }
        .info {
            // float: right;
            height: 1rem;
            width:100%;
            padding-left: 1.2rem;
            padding-top: 0.05rem;

            .title {
                font-size: 0.14rem;
                width: 100%;
                height:0.6rem;
                span {
                    color: red;
                    font-size: .15rem;
                }
            }
            .title-tool {
                float: left;
                width: 100%;
                height: 0.5rem;
                font-size: .12rem;
                span {
                    margin-top: 0.1rem;
                    float: left;
                }
                .brand {
                    
                    color: #a1a1a1;
                }
                .iconfont {
                    font-size: .12rem;
                    float: right;
                    color: #a1a1a1;
                }
            }
        }
    }
}

// 底部上下页部分
.footer-page{
   font-size: .14rem;
   height:.77rem;
   width:100%;
   padding:.2rem .3rem;
   background-color: #f2f2f2;
   position: relative;
   table{
       text-align: center;
       
    .mid-selectPage{
        width:100%;
        text-align: center;
        // line-height: .77rem;
        #selectPage{
            width:1.3rem;
            height:.32rem;
            text-align: center;
            option{
                text-align: center;
            }
        }
    }
    a{
        display: block;
        line-height: .3rem;
        // text-align: center;
    }
    .prePage{
        position: absolute;
        height:.3rem;
        width:.82rem;
        border: 1px solid #bababa;
        left:.4rem;
        border-radius: .05rem;
        background-color: #dfdfdf;
        // text-align: center;
    }
    .nextPage{
        position: absolute;
        height:.3rem;
        width:.82rem;
        border: 1px solid #bababa;
        right:.4rem;
        border-radius: .05rem;
        background-color: #dfdfdf;
    }
    }
}
// 底部工具部分
.footer-tools{
    font-size: .14rem;
    height:.4rem;
    border:1px solid #cccccc;
    width:100%;
    background-color: #f3f3f3;
    padding-left: .1rem;
    .content{
        li{
            float:left;
            line-height: .4rem;
            margin-right: .05rem;
        }
    }
}
