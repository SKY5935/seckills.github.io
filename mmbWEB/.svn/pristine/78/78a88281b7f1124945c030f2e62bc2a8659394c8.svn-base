.w {
  margin: 0 0.15rem;
}
.coupon_top {
  width: 100%;
  background-color: #f4483e;
}
.coupon_top .coupon_title {
  padding: 0 0.5rem;
  position: relative;
}
.coupon_top .coupon_title .coupon_back {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.coupon_top .coupon_title .coupon_back a {
  font-size: 0.2rem;
}
.coupon_top .coupon_title .coupon_back a i {
  font-weight: 700;
  font-size: 0.4rem;
  color: #fff;
}
.coupon_top .coupon_title h2 {
  margin: 0;
  font-size: 30px;
  text-align: center;
  line-height: 0.6rem;
  color: #fff;
  font-weight: 400;
}
.coupon_top .coupon_title .coupon_down {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
}
.coupon_top .coupon_title .coupon_down i {
  font-size: 0.4rem;
  display: block;
  height: 0.4rem;
  width: 0.5rem;
  background: url("../images/header_app.png") no-repeat center / contain;
}
.text {
  font-size: 0.24rem;
  text-align: center;
  color: #777;
}
.content .content-top {
  padding: 0 0.15rem;
  margin: 0.2rem 0;
  font-size: 0.24rem;
}
.content .content-top .content-con {
  position: relative;
}
.content .content-top .content-con .content-left {
  float: left;
  width: 30%;
}
.content .content-top .content-con .content-right {
  padding: 0.15rem 0.2rem;
  float: left;
  width: 70%;
}
.content .content-top .content-con .content-text {
  text-align: center;
  color: #f08e2b;
  float: left;
  width: 100%;
  line-height: 0.8rem;
}
.content .content-top .content-con .inif {
  font-size: 1rem;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%) rotate(180deg);
}
.content .content-top .content-con .inif i {
  font-size: 0.6rem;
  color: #777;
}
.bgb {
  display: none;
  background-color: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.bgb .tubiao {
  position: absolute;
  text-align: center;
  height: 0.8rem;
  width: 0.8rem;
  top: 0.5rem;
  right: 0.3rem;
  font-size: 0.6rem;
  color: #fff;
  opacity: 0.8;
  border-radius: 50%;
  border: 1px solid #ccc;
}
.bgb .img {
  height: 3rem;
  width: 3rem;
  position: absolute;
  background-color: pink;
  top: 50%;
  left: 50%;
  overflow: hidden;
  transform: translateY(-50%) translateX(-50%);
}
.bgb .img ul {
  margin: 0;
  float: left;
  position: absolute;
  top: 0;
  height: 100%;
}
.bgb .img ul li {
  height: 3rem;
  width: 3rem;
  float: left;
}
.bgb .img ul li img {
  height: 3rem;
}
.bgb .left {
  font-size: 0.6rem;
  color: #fff;
  font-size: 1rem;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.bgb .right {
  font-size: 0.6rem;
  color: #fff;
  font-size: 1rem;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%) rotate(180deg);
}
@font-face {
  font-family: 'iconfont';
  src: url('../font/iconfont.eot');
  src: url('../font/iconfont.eot?#iefix') format('embedded-opentype'), url('../font/iconfont.woff') format('woff'), url('../font/iconfont.ttf') format('truetype'), url('../font/iconfont.svg#iconfont') format('svg');
}
.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}
