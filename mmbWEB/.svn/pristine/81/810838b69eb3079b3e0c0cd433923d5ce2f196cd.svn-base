@import 'index.less';
.view {
    width: 100%;
    clear: both;
    background-color: #f2f2f2;
    /*头部*/
    header {
        width: 100%;
        height: 44px;
        background-color: #ff841d;
        position: relative;
        .back1 {
            width: 0.5rem;
            height: 0.44rem;
            position: absolute;
            left: 0.1rem;
            a {
                width: 100%;               
                height: 44px;
                line-height: 44px;
                color: #fff;
                background-position: 50px 0px;
                font-size: 0.17rem;
            }
        }
        h1 {
            font-size: 0.2rem;
            text-align: center;
            font-weight: bold;
            line-height: 44px;
            color: #fff;
            margin: 0px 0.52rem;
        }
        .home {
            width: 50px;
            position: absolute;
            height: 44px;
            right: 10px;
            top:0;
            a {
                position: relative;
                width: 100%;
                height: 44px;
                background: url("./../images/header_app.png") center/32px no-repeat;
            }
        }
    }
    /*内容部分*/
    .container {
        background-color: #fff;
        .cu-content {
            padding: .04rem .1rem;
            h3 {
                font-size: .18rem;
                margin: .1rem auto .05rem auto;
                font-weight: 800;
                text-align: left;
                color: #5a5a5a;
                line-height: normal;
            }
            h4 {
                color: #ff6c00;
                display: block;
                font-size: .15rem;
            }
            .info {
                margin: .12rem auto;
                color: #999;
                font-size: .12rem;
                line-height: .24rem;
                .mall {
                    margin: 0rem .04rem;
                }
                span {
                    color: #999;
                    vertical-align: middle;
                }
                .author {
                    a {
                        color: #4682c5;
                        display: inline-block;
                    }
                }
            }
            .content {
                .picwrap {
                    width: 1.2rem;
                    float: right;
                    margin: .12rem auto .12rem;
                    overflow: hidden;
                    img {
                        width: 1.2rem;
                        height: 1.2rem;
                        border: none;
                        vertical-align: middle;
                    }
                }
                .conn {
                    font-size: .16rem;
                    line-height: .24rem;
                    color: #606060;
                    padding-bottom: .2rem;
                    p {
                        margin: .06rem auto;
                    }
                    a {
                        color: #4682c5;
                    }
                    img {
                        width: 100%;
                    }
                    .couponinfo {
                        margin-top: .2rem;
                        font-size: .14rem;
                    }
                }
            }
            .golink {
                a {
                    height: .4rem;
                    line-height: .4rem;
                    display: block;
                    margin: .2rem .1rem;
                    background: #FF9000;
                    text-align: center;
                    font-size: .14rem;
                    color: #ffffff;
                }
            }
        }
        .cu-content-pl {
            .tit {
                font-size: .16rem;
                padding: .06rem .08rem;
            }
            .reply {
                padding: .06rem .08rem;
                .form {
                    border: .02rem solid #eceae8;
                    border-radius: .02rem; // padding: .04rem 0 0 .94rem;
                    position: relative;
                    width: 98%;
                    margin: 0 auto;
                    textarea {
                        width: 100%;
                        resize: none;
                        overflow-x: hidden;
                        overflow-y: auto;
                        border: none;
                        line-height: .22rem;
                        font-size: .14rem;
                        outline: 0;
                        color: #666;
                        height: .68rem;
                    }
                    .ctrl {
                        background-color: #fbfbfb;
                        height: .36rem;
                        // margin-left: -.04rem;
                        border-top: solid 1px #f2f2f2;
                        input {
                            position: absolute;
                            right: -.02rem;
                            bottom: -.02rem;
                            background: #ff841d;
                            border: .02rem solid #ff841d;
                            border-left: none;
                            border-top: none;
                            padding: 0px;
                            width: 1rem;
                            height: .39rem;
                            color: #fff;
                            outline: 0;
                            border-radius: 0 0 .02rem 0;
                            font-size: .16rem;
                        }
                    }
                }
            }
            .list {
                ul {
                    li {
                        padding: .18rem .1rem;
                        .userimg {
                            width: .4rem;
                            float: left;
                            overflow: hidden;
                            img {
                                width: .4rem;
                                background-position: top;
                                border-radius: 50%;
                                height: .4rem;
                            }
                        }
                        .con {
                            overflow: hidden;
                            padding-left: 10px;
                            .name {
                                color: #2e8b01;
                                font-size: .14rem;
                                margin-bottom: .06rem;
                                .username {
                                    color: #5997c0;
                                    font-size: .13rem !important;
                                    float: left;
                                }
                                .time {
                                    color: #999999;
                                    font-size: .13rem !important;
                                    float: right;
                                }
                            }
                            .content {
                                font-size: .15rem !important;
                                color: #606060;
                                line-height: .2rem;
                                img {
                                    display: inline-block;
                                    width: .22rem;
                                    height: .22rem;
                                    vertical-align: middle;
                                }
                                .yinyong {
                                    background-color: #fff;
                                    border: 1px solid #eeeeee;
                                }
                            }
                        }
                    }
                }
            }
        }
        .Page_loading {
            margin-top: .15rem;
            text-align: center;
            font-family: "微软雅黑";
            font-size: .16rem;
            padding: .1rem 0px;
            background-color: #f2f2f2;
        }
    }
    .footNav {
        margin-top: .2rem;
        border-top: 1px solid #ebebeb;
        border-bottom: 1px solid #ccc;
        line-height: .36rem;
        height: .36rem;
        padding-left: .08rem;
        a {
            font-size: .14rem;
            float: left;
        }
    }
    /*底部*/
    .footApp {
        position: static;
        .appbanner {
            position: relative;
            font-size: 0.12rem;
            margin-top: 0.2rem; // margin-bottom: 0.4rem;
            background-color: #434343;
            padding: 0.1rem;
            .applogo {
                float: left;
                width: 0.55rem;
                height: 0.55rem;
                img {
                    width: 100%;
                }
            }
            .tit {
                font-size: 0.18rem;
                padding-left: 0.1rem;
                overflow: hidden;
                margin-left: 0.1rem;
                color: #fff;
                p {
                    font-size: 0.14rem;
                    padding: 0;
                    margin-top: .04rem;
                    color: #fee6c2;
                }
            }
            .btn {
                position: absolute;
                width: 1rem;
                height: 0.3rem;
                right: 0.2rem;
                top: 0.08rem;
                a {
                    height: 0.28rem;
                    line-height: 0.28rem;
                    display: block;
                    width: 1rem;
                    color: #fff;
                    background-color: #6db110;
                    text-align: center;
                    border-radius: 0.04rem;
                }
            }
        }
        .index_foot_top {
            margin-bottom: 44px;
            a {
                text-decoration: none;
            }
        }
        .footer-cu {
            width: 100%;
            background-color: #FCFCFC;
            color: #666;
            position: fixed;
            right: 0;
            left: 0;
            bottom: 0;
            height: 44px;
            font-size: 10px;
            display: table;
            z-index: 999; //左边
            .footer-comment {
                width: 30%;
                float: left;
                text-align: center;
                a {
                    display: block;
                    width: 100%;
                    height: 100%;
                    position: absolute;
                    top: 0px;
                    left: 0px;
                }
                .icon-comment {
                    height: 20px;
                    text-align: center;
                    line-height: 20px;
                }
                .comCont {
                    color: #666;
                    font-weight: normal;
                }
            } //右边
            .foot-cubtn {
                width: 70%;
                float: right;
                vertical-align: middle;
                .footer-gobuy {
                    width: 100%;
                }
                ul {
                    li {
                        display: table-cell;
                        box-sizing: border-box;
                        padding: 0px;
                        float: right;
                        .shopCon {
                            color: white;
                            font-weight: normal;
                        }
                    }
                }
                .c {
                    background: #FF9000;
                    height: 44px;
                    border-radius: 0px;
                    line-height: 44px;
                    text-align: center;
                    position: relative;
                    top: 0px;
                    a {
                        display: block;
                        width: 100%;
                        height: 100%;
                        position: absolute;
                        top: 0px;
                        left: 0px;
                    }
                }
                .tit {
                    color: #FFFFFF;
                    font-size: 16px;
                    margin-left: 0px;
                    display: inline-block;
                    vertical-align: middle;
                    line-height: normal;
                }
            }
        }
    }
}