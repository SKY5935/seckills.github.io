header {
    .backIcon {
        font-weight: bold;
        font-size: 20px;
    }
}

.container {
    .cu-content {
        padding: 4px 10px;
        h3 {
            font-size: 18px;
            margin: 10px auto 5px auto;
            font-weight: 800;
            text-align: left;
            color: #5a5a5a;
            line-height: normal;
        }
        h4 {
            color: #ff6c00;
            display: block;
            font-size: 15px;
        }
        .info {
            margin: 12px auto;
            color: #999;
            font-size: 12px;
            line-height: 24px;
            .mall {
                margin: 0px 4px;
            }
            span {
                color: #999;
                vertical-align: middle;
            }
            .author {
                a {
                    color: #4682c5;
                }
            }
        }
        .content {
            .picwrap {
                width: 120px;
                float: right;
                margin: 12px auto 12px;
                overflow: hidden;
                img {
                    width: 120px;
                    height: 120px;
                    border: none;
                    vertical-align: middle;
                }
            }
            .conn {
                font-size: 16px;
                line-height: 24px;
                color: #606060;
                padding-bottom: 20px;
                p {
                    margin: 6px auto;
                }
                a {
                    color: #4682c5;
                }
                img {
                    width: 100%;
                }
                .couponinfo {
                    margin-top: 20px;
                    font-size: 14px;
                }
            }
        }
    }
    .cu-content-pl {
        .tit {
            font-size: 16px;
            padding: 6px 8px;
        }
        .reply {
            padding: 6px 8px;
            .form {
                border: 2px solid #eceae8;
                border-radius: 2xp;
                padding: 4px 0 0 4px;
                position: relative;
                width: 98%;
                margin: 0 auto;
                textarea {
                    width: 100%;
                    resize: none;
                    overflow-x: hidden;
                    overflow-y: auto;
                    border: none;
                    line-height: 22px;
                    font-size: 14px;
                    outline: 0;
                    color: #666;
                    height: 68px;
                }
                .ctrl {
                    background-color: #fbfbfb;
                    height: 36px;
                    margin-left: -4px;
                    border-top: solid 1px #f2f2f2;
                    input {
                        position: absolute;
                        right: -2px;
                        bottom: -2px;
                        background: #ff841d;
                        border: 2px solid #ff841d;
                        border-left: none;
                        border-top: none;
                        padding: 0px;
                        width: 100px;
                        height: 39px;
                        color: #fff;
                        outline: 0;
                        border-radius: 0 0 2px 0;
                        font-size: 16px;
                    }
                }
            }
        }
        .list {
            ul {
                li {
                    padding: 18px 10px;
                    .userimg {
                        width: 40px;
                        float: left;
                        overflow: hidden;
                        img {
                            width: 40px;
                            background-position: top;
                            border-radius: 50%;
                            height: 40px;
                        }
                    }
                    .con {
                        overflow: hidden;
                        padding-left: 10px;
                        .name {
                            color: #2e8b01;
                            font-size: 14px;
                            margin-bottom: 6px;
                            .username {
                                color: #5997c0;
                                font-size: 13px !important;
                                float: left;
                            }
                            .time {
                                color: #999999;
                                font-size: 13px !important;
                                float: right;
                            }
                        }
                        .content {
                            font-size: 15px !important;
                            color: #606060;
                            line-height: 20px;
                        }
                    }
                }
            }
        }
    }
    .Page_loading {
        margin-top: 15px;
        text-align: center;
        font-family: "微软雅黑";
        font-size: 16px;
        padding: 10px 0px;
        background-color: #f2f2f2;
    }
}

.footNav {
    margin-top: 20px;
    height: 36px;
    background-color: #ebebeb;
    border-bottom: 1px solid #ccc;
    line-height: 36px;
    padding-left: 8px;
    font-size: 14px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.cu-content .golink a {
    height: 40px;
    line-height: 40px;
    display: block;
    margin: 20px 10px;
    background: #FF9000;
    border-radius: 4px;
    text-align: center;
    font-size: 14px;
    color: #ffffff;
}

//底部固定购买
.footer-cu {
    width: 100%;
    background-color: #FCFCFC;
    color: #666;
    position: fixed;
    right: 0;
    left: 0;
    bottom: 0;
    height: 44px;
    font-size: 10px;
    display: table;
    z-index: 999; //左边
    .footer-comment {
        width: 30%;
        float: left;
        text-align: center;
        a {
            display: block;
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0px;
            left: 0px;
        }
        .icon-comment {
            height: 20px;
            text-align: center;
            line-height: 20px;
        }
        .comCont {
            color: #666;
            font-weight: normal;
        }
    } //右边
    .foot-cubtn {
        width: 70%;
        float: right;
        vertical-align: middle;
        .footer-gobuy {
            width: 100%;
        }
        ul {
            li {
                display: table-cell;
                box-sizing: border-box;
                padding: 0px;
                float: right;
                .shopCon {
                    color: white;
                    font-weight: normal;
                }
            }
        }
        .c {
            background: #FF9000;
            height: 44px;
            border-radius: 0px;
            line-height: 44px;
            text-align: center;
            position: relative;
            top: 0px;
            a {
                display: block;
                width: 100%;
                height: 100%;
                position: absolute;
                top: 0px;
                left: 0px;
            }
        }
        .tit {
            color: #FFFFFF;
            font-size: 16px;
            margin-left: 0px;
            display: inline-block;
            vertical-align: middle;
            line-height: normal;
        }
    }
}

footer {
    margin-bottom: 44px;
    .MBApp {
        height: 84px;
        background-color: #434343;
        padding: 10px;
        position: relative;
        .logo {
            float: left;
            img {
                width: 64px;
                height: 64px;
            }
        }
        .txt {
            float: left;
            padding-left: 10px;
            padding-top: 6px;
            .t1 {
                color: #fff;
                font-size: 18px;
            }
            .t2 {
                color: #fee6c2;
                font-size: 14px;
                line-height: 20px;
            }
        }
        .open {
            height: 28px;
            line-height: 28px;
            position: absolute;
            right: 10px;
            top: 8px;
            width: 80px;
            font-size: 14px;
            color: #fff;
            background-color: #6db110;
            border-radius: 4px;
            text-align: center;
        }
    }
    .login {
        margin-top: 0px;
    }
    .APPDowload {
        right: 0px;
        bottom: 64px;
    }
}